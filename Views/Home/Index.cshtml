@model List<TicTacToe.Models.ButtonModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">TicTacToe with ASP.NET</h1>

    @using(Html.BeginForm("HandleRestart", "Home"))
    {
        <button type="submit" name="restart">
            <p>Restart</p>
        </button>
    }

    @using(Html.BeginForm("HandleButtonClick", "Home")){
        for(int i = 0; i < 9; i++)
        {
            <button type="submit" name="user" value="@i">
                <span> @Model[i].State </span>
            </button>

            if( (i + 1) % 3 == 0)
            {
                <br />
            }
        }
    }
</div>
