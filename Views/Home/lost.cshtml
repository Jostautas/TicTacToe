    ViewData["Title"] = "You lost";
}

<div class="text-center">
    <h1 class="display-4">GAME OVER</h1>
    <p>You lost</p>
    <br />

    @using(Html.BeginForm("HandleRestart", "Home"))
    {
       //<button type="submit" name="user" value="@i">
        <button type="submit" name="restart">
            <p>Restart</p>
        </button>
    }
    <br />
